@model IEnumerable<RBEV.Models.Registration>

@{
    ViewData["Title"] = "Index";
}

<h1>All Registrations</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Register for an Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Division)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Division)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FullName)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.RegistrationID">Details</a> |
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.RegistrationID">Edit</a> |
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.RegistrationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
