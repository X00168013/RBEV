@{
    ViewData["Title"] = "Home Page";
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap2.css" />

<body>
    <div class="jumbotron">
        <h1 style="text-align: center" class="display-4">RBALL EVENTS</h1>
        <p class="lead">
            RBALLEVENTS is an open source form where people from all over Ireland can add their local racquetball event details such as
            Open Days, Club leagues, Weekend Tournaments. An opportunity to find local racquetball events and tournaments in your area. You can find all the events local clubs are hosting and register here.
        </p><hr class="my-4">
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="height: 475px;margin:auto; border-radius: 25px; border: 2px; padding: 25px;" class="d-block w-75" src="~/Images/racquet1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img style="height: 475px;margin:auto; border-radius: 25px; border: 2px; padding: 25px;" class="d-block w-75" src="~/Images/racquet2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img style="height: 475px;margin:auto; border-radius: 25px; border: 2px; padding: 25px;" class="d-block w-75" src="~/Images/racquet4.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <div class="row">
        <div class="column" style="text-align: center;flex:50%; padding:10px">
            <h3>Find Racquetball Events</h3>
            <img src="~/Images/rball4.jpg" style="border-radius:25px; border: 2px; padding: 25px; width: 350px; height: 250px; " />
            <h5>Find an Irish racquetball event near you</h5>
            <a href="@Url.Action("Location", "Home")" class="btn btn-primary">View Our Map</a>
        </div>
        <br />
        <div class="column" style="text-align: center;flex:50%; padding:10px">
            <h3>Racquetball Event happening at your club?</h3>
            <img style="border-radius: 25px; border: 2px; padding: 25px; width: 350px; height: 250px; " src="~/Images/rball5.jpg" />
            <h3><a href="@Url.Action("Create", "Events")" class="btn btn-primary">Add Racquetball Events</a></h3>
        </div>
    </div>
 </body>
